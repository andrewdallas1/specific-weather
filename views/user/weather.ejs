<% include ../partials/head.ejs %>
<body class="blue accent-1">
<div class="container">
  <h1 class="white-text center">Specific Weather</h1>
  <h3 class="white-text center">Your current forecast</h3>
  <figure class="icons center">
    <canvas id=<%= icon %> width="64" height="64"></canvas>
  </figure>
  <h4 class="white-text center"><%= summary %></h4>
  <h4 class="white-text center"><%= temp %> &degF</h4>


  <script>
    var icons = new Skycons({"color": "blue"});

    icons.set("clear-day", Skycons.CLEAR_DAY);
    icons.set("clear-night", Skycons.CLEAR_NIGHT);
    icons.set("partly-cloudy-day", Skycons.PARTLY_CLOUDY_DAY);
    icons.set("partly-cloudy-night", Skycons.PARTLY_CLOUDY_NIGHT);
    icons.set("cloudy", Skycons.CLOUDY);
    icons.set("rain", Skycons.RAIN);
    icons.set("sleet", Skycons.SLEET);
    icons.set("snow", Skycons.SNOW);
    icons.set("wind", Skycons.WIND);
    icons.set("fog", Skycons.FOG);

    icons.play();
  </script>
  </div>
</body>
</html>
